<section></section>
<h1 class="title">FORUM</h1>

<div class="container">
    <table class="table is-striped">
        <tr>
            <th width="70%">Room</th>
            <th width="20%">Last Post</th>
            <th width="10%"><%= link_to 'New Forum', new_forum_path, class:"button is-success" %></th>
        </tr>
        <% for forum in @forums %>
        <!-- it would be cool to sort this by recent post -->
        <tr>
            <td>
                <h4><%= link_to h(forum.name), forum_path(forum.id) %></h4>
                <small><%= forum.topics.count %>
                    topics</small><br/>
                <%=h forum.description %></td>
            <td class="right">
                <% if forum.most_recent_post %>
                <small><%= time_ago_in_words(forum.most_recent_post.created_at)%>
                    ago by
                    <%= link_to forum.most_recent_post.user.username, "/users/#{forum.most_recent_post.last_poster_id}" %></small>
            <% else %>
                <small>no posts</small>
                <% end %>
            </td>
        </tr>
        <% end %>
    </table>
</div>
<br>
