<p id="notice"><%= notice %></p>

<h1>Collaborators</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>User</th>
      <th>Approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collaborators.each do |collaborator| %>
      <tr>
        <td><%= collaborator.project.title %></td>
        <td><%= collaborator.user.username %></td>
        <td><%= collaborator.approved %></td>
        <td><%= link_to 'Show', project_collaborator_path(id: collaborator.id) %></td>
        <td><%= link_to 'Edit', edit_project_collaborator_path(id: collaborator.id) %></td>
        <td><%= link_to 'Destroy', [@project, collaborator], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

