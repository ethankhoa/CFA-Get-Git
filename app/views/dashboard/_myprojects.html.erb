<section class="hero is-light">
    <div class="hero-body">
        <div class="container" style="padding:2em;">
            <h1 class="title" style="padding:0;">
                MY PROJECTS
            </h1>
            <table class="table is-striped" style="background-color:whitesmoke;">
              <thead>
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Start Date</th>
                    <th>Languages</th>
                    <th></th>
                </tr>
              </thead>
              <% @projects.each do |project| %>
              <tbody>
                <td><%= project.title %></td>
                <td><%= project.status %></td>
                <td><%= project.start_date %></td>
                <td>
                    <% project.languages.each do |language| %>
                    <%= language.upcase %>
                    <%end%>
                </td>
                <td><%= link_to '<button class="button is-info">Project Dashboard</button>'.html_safe, project_pages_project_dashboard_path(project_id: project.id)%></td>
                <!-- add button to view project dashboard-->
                <% end %>
              </tbody>
            </table>
        </div>
    </div>
</section>
