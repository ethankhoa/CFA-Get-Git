<section class="hero is-light">
  <div class="hero-body">
    <div class="container" style="padding:2em;">
      <h1 class="title">
        MY PROJECTS
      </h1>
      <% @projects.each do |project| %>
        <table class="table" style="background-color:whitesmoke";>
          <tr>
              <th>Title</th>
              <th>Status</th>
              <th>Start Date</th>
              <th>Languages</th>
              <th></th>
          </tr>
          <td><%= project.title %></td>
          <td><%= project.status %></td>
          <td><%= project.start_date %></td>
          <td><%= project.languages %></td>
          <td><%= link_to '<button class="button is-info is-outlined">Project Dashboard</button>'.html_safe, project_pages_project_dashboard_path(project_id: project.id)%>
</td> <!-- add button to view project dashboard-->
        </table>
      <% end %>
    </div>
  </div>
</section>
